<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.houzhiwen.speed.FirstActivity">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/gamelogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout6">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="@drawable/first_back"
        android:layout_marginTop="168dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/begin"
            android:layout_marginTop="9dp"
            android:layout_width="285dp"
            android:layout_height="100dp"
            android:background="@drawable/newgame"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </Button>

        <Button
            android:layout_width="282dp"
            android:layout_height="69dp"
            android:background="@drawable/go_sound"
            android:id="@+id/button_gosound"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/begin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="270dp"
            android:layout_height="65dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/exit"
            android:id="@+id/button_exit"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="showdialog2"/>
    </RelativeLayout>

</RelativeLayout>
