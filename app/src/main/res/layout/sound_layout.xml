<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/sound_head"
        android:id="@+id/relativeLayout7"></RelativeLayout>
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:id="@+id/button_soundreturn"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/sound_updown"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/relativeLayout7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></RelativeLayout>
    <SeekBar
        android:id="@+id/volumeseekbar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/down"
        android:id="@+id/button_sounddown"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/up"
        android:id="@+id/button_soundup"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/sound_spead"
        android:layout_marginTop="210dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></RelativeLayout>
    <SeekBar
        android:id="@+id/speedseekbar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="305dp"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/down"
        android:id="@+id/button_speaddown"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/up"
        android:id="@+id/button_speadup"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/sound_kind"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/button_speaddown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></RelativeLayout>
    <Button
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:background="@drawable/sound_boy"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/button_soundboy"/>
    <Button
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:background="@drawable/sound_girl"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="200dp"
        android:id="@+id/button_soundgirl"/>
</RelativeLayout>